{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://graffiticode.com/schemas/l0166.json",
  "title": "L0166",
  "description": "A spreadsheet-based assessment language",
  "type": "object",
  "properties": {
    "interaction": {
      "type": "object",
      "description": "The interaction configuration for the spreadsheet",
      "properties": {
        "cells": {
          "type": "object",
          "description": "Cell definitions keyed by cell name",
          "patternProperties": {
            "^[A-Z]+[0-9]+$": {
              "$ref": "#/definitions/cell"
            }
          },
          "additionalProperties": false
        },
        "columns": {
          "type": "object",
          "description": "Column definitions keyed by column letter",
          "patternProperties": {
            "^[A-Z]+$": {
              "$ref": "#/definitions/column"
            }
          },
          "additionalProperties": false
        },
        "rows": {
          "type": "object",
          "description": "Row definitions keyed by row number or range",
          "patternProperties": {
            "^([0-9]+|[0-9]+\\.\\.[0-9]+|\\*)$": {
              "$ref": "#/definitions/row"
            }
          },
          "additionalProperties": false
        },
        "ranges": {
          "type": "object",
          "description": "Range definitions keyed by range notation (e.g., 'A1:B10' or '*' for all cells)",
          "patternProperties": {
            "^([A-Z]+[0-9]+:[A-Z]+[0-9]+|\\*)$": {
              "$ref": "#/definitions/range"
            }
          },
          "additionalProperties": false
        }
      }
    }
  },
  "definitions": {
    "cell": {
      "type": "object",
      "description": "Individual cell configuration",
      "template": "cell name prop-name prop-value {}",
      "properties": {
        "text": {
          "type": "string",
          "description": "The text content of the cell"
        },
        "text-align": {
          "type": "string",
          "enum": ["left", "center", "right"],
          "description": "Text alignment in the cell"
        },
        "text-vertical-align": {
          "type": "string",
          "enum": ["top", "middle", "bottom"],
          "description": "Vertical alignment for the cell"
        },
        "text-decoration": {
          "type": "string",
          "enum": ["none", "underline", "overline", "line-through"],
          "description": "Text decoration for the cell"
        },
        "background-color": {
          "type": "string",
          "description": "Background color of the cell (hex, rgb, rgba, or named colors)"
        },
        "font-weight": {
          "type": "string",
          "enum": ["normal", "bold", "lighter", "bolder"],
          "description": "Font weight for the cell"
        },
        "font-size": {
          "type": "string",
          "description": "Font size for the cell (e.g., '12px', '14pt', '1.2em')"
        },
        "font-family": {
          "type": "string",
          "description": "Font family for the cell (e.g., 'Arial', 'Helvetica', 'monospace')"
        },
        "font-style": {
          "type": "string",
          "enum": ["normal", "italic", "oblique"],
          "description": "Font style for the cell"
        },
        "color": {
          "type": "string",
          "description": "Text color for the cell (hex, rgb, rgba, or named colors)"
        },
        "border": {
          "type": "string",
          "description": "Border specification for the cell (e.g., '1px solid black')"
        },
        "format": {
          "type": "string",
          "description": "Format pattern for cell values (e.g., '#,##0', '0.00', 'date', 'currency')"
        },
        "assess": {
          "$ref": "#/definitions/assess"
        },
        "protected": {
          "type": "boolean",
          "description": "Whether the cell is protected from editing"
        }
      },
      "required": [],
      "additionalProperties": true
    },
    "assess": {
      "type": "object",
      "description": "Assessment configuration for validation",
      "properties": {
        "method": {
          "type": "string",
          "enum": ["value", "formula"],
          "description": "The assessment method to use for validation (value: compare computed value, formula: compare formula text)"
        },
        "expected": {
          "description": "The expected value for validation",
          "oneOf": [
            {"type": "string"},
            {"type": "number"},
            {"type": "boolean"},
            {
              "type": "string",
              "format": "date",
              "description": "Date in ISO 8601 format"
            }
          ]
        },
        "points": {
          "type": "number",
          "description": "Points awarded for correct answer",
          "minimum": 0
        }
      },
      "additionalProperties": true
    },
    "column": {
      "type": "object",
      "description": "Column configuration",
      "properties": {
        "align": {
          "type": "string",
          "enum": ["left", "center", "right"],
          "description": "Default text alignment for the column"
        },
        "width": {
          "type": "integer",
          "minimum": 0,
          "description": "Column width in pixels"
        },
        "font-weight": {
          "type": "string",
          "enum": ["normal", "bold", "lighter", "bolder"],
          "description": "Font weight for the column"
        },
        "font-size": {
          "type": "string",
          "description": "Font size for the column (e.g., '12px', '14pt', '1.2em')"
        },
        "font-family": {
          "type": "string",
          "description": "Font family for the column (e.g., 'Arial', 'Helvetica', 'monospace')"
        },
        "font-style": {
          "type": "string",
          "enum": ["normal", "italic", "oblique"],
          "description": "Font style for the column"
        },
        "color": {
          "type": "string",
          "description": "Text color for the column (hex, rgb, rgba, or named colors)"
        },
        "text-decoration": {
          "type": "string",
          "enum": ["none", "underline", "overline", "line-through"],
          "description": "Text decoration for the column"
        },
        "border": {
          "type": "string",
          "description": "Border specification for the column (e.g., '1px solid black')"
        },
        "vertical-align": {
          "type": "string",
          "enum": ["top", "middle", "bottom"],
          "description": "Vertical alignment for the column"
        },
        "format": {
          "type": "string",
          "description": "Default format pattern for all cells in the column"
        },
        "background-color": {
          "type": "string",
          "description": "Background color for all cells in the column (hex, rgb, rgba, or named colors)"
        },
        "protected": {
          "type": "boolean",
          "description": "Whether all cells in the column are protected from editing"
        }
      },
      "additionalProperties": true
    },
    "row": {
      "type": "object",
      "description": "Row configuration",
      "properties": {
        "align": {
          "type": "string",
          "enum": ["left", "center", "right"],
          "description": "Default text alignment for the row"
        },
        "font-weight": {
          "type": "string",
          "enum": ["normal", "bold", "lighter", "bolder"],
          "description": "Font weight for the row"
        },
        "font-size": {
          "type": "string",
          "description": "Font size for the row (e.g., '12px', '14pt', '1.2em')"
        },
        "font-family": {
          "type": "string",
          "description": "Font family for the row (e.g., 'Arial', 'Helvetica', 'monospace')"
        },
        "font-style": {
          "type": "string",
          "enum": ["normal", "italic", "oblique"],
          "description": "Font style for the row"
        },
        "color": {
          "type": "string",
          "description": "Text color for the row (hex, rgb, rgba, or named colors)"
        },
        "text-decoration": {
          "type": "string",
          "enum": ["none", "underline", "overline", "line-through"],
          "description": "Text decoration for the row"
        },
        "border": {
          "type": "string",
          "description": "Border specification for the row (e.g., '1px solid black')"
        },
        "vertical-align": {
          "type": "string",
          "enum": ["top", "middle", "bottom"],
          "description": "Vertical alignment for the row"
        },
        "format": {
          "type": "string",
          "description": "Default format pattern for all cells in the row"
        },
        "background-color": {
          "type": "string",
          "description": "Background color for all cells in the row (hex, rgb, rgba, or named colors)"
        },
        "protected": {
          "type": "boolean",
          "description": "Whether the row is protected from editing"
        }
      },
      "additionalProperties": true
    },
    "range": {
      "type": "object",
      "description": "Range configuration - can have any row or column properties",
      "properties": {
        "align": {
          "type": "string",
          "enum": ["left", "center", "right"],
          "description": "Default text alignment for the range"
        },
        "width": {
          "type": "integer",
          "minimum": 0,
          "description": "Column width in pixels for cells in the range"
        },
        "protected": {
          "type": "boolean",
          "description": "Whether the range is protected from editing"
        },
        "font-weight": {
          "type": "string",
          "enum": ["normal", "bold", "lighter", "bolder"],
          "description": "Font weight for the range"
        },
        "font-size": {
          "type": "string",
          "description": "Font size for the range (e.g., '12px', '14pt', '1.2em')"
        },
        "font-family": {
          "type": "string",
          "description": "Font family for the range (e.g., 'Arial', 'Helvetica', 'monospace')"
        },
        "font-style": {
          "type": "string",
          "enum": ["normal", "italic", "oblique"],
          "description": "Font style for the range"
        },
        "color": {
          "type": "string",
          "description": "Text color for the range (hex, rgb, rgba, or named colors)"
        },
        "text-decoration": {
          "type": "string",
          "enum": ["none", "underline", "overline", "line-through"],
          "description": "Text decoration for the range"
        },
        "border": {
          "type": "string",
          "description": "Border specification for the range (e.g., '1px solid black')"
        },
        "vertical-align": {
          "type": "string",
          "enum": ["top", "middle", "bottom"],
          "description": "Vertical alignment for the range"
        },
        "format": {
          "type": "string",
          "description": "Default format pattern for all cells in the range"
        },
        "background-color": {
          "type": "string",
          "description": "Background color for all cells in the range (hex, rgb, rgba, or named colors)"
        }
      },
      "additionalProperties": true
    }
  },
  "required": []
}
